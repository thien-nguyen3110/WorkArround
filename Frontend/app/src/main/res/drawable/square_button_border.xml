<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom layer: Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent background for the border -->
            <stroke
                android:width="4dp"
            android:color="#B0B0B0"/>           <!-- Light black color -->
            <corners android:radius="0dp"/>       <!-- Square corners -->
        </shape>
    </item>

    <!-- Top layer: Square Button -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFA500"/>      <!-- Button background color -->
            <corners android:radius="0dp"/>       <!-- Square corners -->
        </shape>
    </item>
</layer-list>

