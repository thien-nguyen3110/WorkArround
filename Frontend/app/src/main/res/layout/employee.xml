<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".employeeActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/check_btn"
        android:layout_marginTop="100dp"
        android:layout_width="600dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/check_txt"
        android:layout_marginTop="-140dp"
        android:layout_width="600dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:textSize="16pt"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="Check in" />

    <TextView
        android:id="@+id/check_clk_txt"
        android:layout_marginTop="-80dp"
        android:layout_width="600dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:textSize="16pt"
        android:textAlignment="center"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/next_shift_btn"
        android:layout_marginTop="-50dp"
        android:layout_width="600dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:textSize="16pt"
        android:textAlignment="center"
        android:backgroundTint="@color/black"/>


    <TextView
        android:id="@+id/next_shift_txt"
        android:layout_marginTop="-140dp"
        android:layout_width="600dp"
        android:layout_height="150dp"
        android:layout_gravity="start"
        android:textSize="16pt"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:text="Next Shift" />

    <Button
        android:id="@+id/next_payday_btn"
        android:layout_marginTop="10dp"
        android:layout_width="600dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:textAlignment="center"
        android:backgroundTint="@color/black" />


    <TextView
        android:id="@+id/payday_txt"
        android:layout_marginTop="-140dp"
        android:layout_width="600dp"
        android:layout_height="150dp"
        android:layout_gravity="end"
        android:textSize="16pt"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:text="   Next Payday" />

    <Button
        android:id="@+id/signout_btn"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Log Out" />
</androidx.appcompat.widget.LinearLayoutCompat>