<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".payCheckModifyActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFF0E0">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- User Name Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modifying Pay Details for:"
            android:textSize="18sp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!-- Editable Pay Details -->
        <EditText
            android:id="@+id/editHoursWorked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Hours Worked"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/editPayRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Pay Rate ($)"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/editBonusPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Bonus Pay ($)"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/editDeductibles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Deductibles ($)"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveChangesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#FFA500"/>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>