<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFF0E0"
    tools:context=".createProject">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarCreate"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFA500"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="#FFFFFF"
        tools:ignore="MissingConstraints">
    </androidx.appcompat.widget.Toolbar>

    <!-- Project Name Field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Name:"
        android:padding="16dp">
    </TextView>

    <EditText
        android:id="@+id/project_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter project name"
        android:padding="16dp">
    </EditText>

    <!-- Project Description Field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Description:"
        android:padding="16dp">
    </TextView>

    <EditText
        android:id="@+id/project_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter project description"
        android:padding="16dp">
    </EditText>

    <!-- Due Date Field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due Date:"
        android:padding="16dp">
    </TextView>

    <EditText
        android:id="@+id/due_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter due date (e.g., MM/DD/YYYY)"
        android:padding="16dp">
    </EditText>

    <!-- Priority Level Dropdown -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Priority Level:"
        android:padding="16dp">
    </TextView>

    <Spinner
        android:id="@+id/priority_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
    </Spinner>

    <!-- Employer Assigned Field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employer Assigned To:"
        android:padding="16dp">
    </TextView>

    <Spinner
        android:id="@+id/employer_Assigned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter employer's name"
        android:padding="16dp">
    </Spinner>

    <!-- Save Button -->
    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_gravity="center"
        android:padding="16dp"
        android:backgroundTint="#FFA500">
    </Button>

</androidx.appcompat.widget.LinearLayoutCompat>
