<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".employerActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

        <!-- Check In/Out Box -->
        <LinearLayout
            android:id="@+id/checkInOutBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            android:onClick="toggleCheckInOut">

            <TextView
                android:id="@+id/checkInOutText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check In"
                android:textSize="24sp"
                android:textColor="#FFA500" />

        </LinearLayout>

        <!-- Four Small Boxes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/projectStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Project Status"
                android:backgroundTint="#FFA500"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/assignProject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Assign Project"
                android:backgroundTint="#FFA500"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/employeeAttendance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Employee Attendance"
                android:backgroundTint="#FFA500"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/employeeStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Employee Status"
                android:backgroundTint="#FFA500"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- Next Shift Box -->
        <LinearLayout
            android:id="@+id/nextShiftBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/nextShiftTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Shift"
                android:textSize="18sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/nextShiftDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: [Shift Date]\nHours: [Shift Hours]\nTasks: [Shift Tasks]"
                android:textSize="14sp"
                android:textColor="#000000" />

            <ImageButton
                android:id="@+id/nextShiftArrow"
                android:layout_width="37dp"
                android:layout_height="33dp"
                android:layout_gravity="end"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Show more shifts"
                android:src="@drawable/arrowdown"
                android:scaleType="fitCenter"/>

        </LinearLayout>

        <!-- Payday Box -->
        <LinearLayout
            android:id="@+id/paydayBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/paydayTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Payday"
                android:textSize="18sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/paydayDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: [Payday Date]\nHours Worked: [Hours]\nTake Home Pay: [Amount]"
                android:textSize="14sp"
                android:textColor="#000000" />

            <ImageButton
                android:id="@+id/paydayArrow"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="end"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Show past paychecks"
                android:src="@drawable/arrowdown"
                android:scaleType="fitCenter"
                />

        </LinearLayout>

        <!-- Time Off and Contract Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/timeOffMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time Off Menu"
                android:backgroundTint="#FFA500"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/contract"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contract"
                android:backgroundTint="#FFA500"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- Last Four Small Boxes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profile"
                android:backgroundTint="#FFA500"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/tasks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tasks"
                android:backgroundTint="#FFA500"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/timeTracking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time Tracking"
                android:backgroundTint="#FFA500"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/taxPay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tax/Pay"
                android:backgroundTint="#FFA500"
                android:textColor="#FFFFFF" />

        </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>