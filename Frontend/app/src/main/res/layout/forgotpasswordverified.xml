<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".forgotPasswordVerifiedActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFF0E0">

    <!--White background to surround forgot password-->
    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:background="@color/white">
    </FrameLayout>

    <!--Logo-->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="-500dp"
        android:src="@drawable/workaroundlogo">
    </ImageView>

    <!--No email found-->
    <TextView
        android:id="@+id/messageText"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FF0000">
    </TextView>

    <!--Email image-->
    <ImageView
        android:id="@+id/emailImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/emaillogo"
        android:layout_marginTop="-30dp">
    </ImageView>

    <!--Text for succesful email sent-->
    <TextView
        android:id="@+id/checkEmail"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Check Your Email"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textStyle="bold">
    </TextView>

    <!--Text for succesful email sent-->
    <TextView
        android:id="@+id/checkEmailMessage"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="-15dp"
        android:text="Please check the email address"
        android:textAlignment="center">
    </TextView>

    <!--Email ID-->
    <TextView
        android:id="@+id/emailPlace"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:text=""
        android:layout_gravity="center"
        android:layout_marginTop="-13dp"
        android:textStyle="bold"
        android:gravity="center">
    </TextView>

    <!--Text for succesful email sent-->
    <TextView
        android:id="@+id/checkEmailMessage2"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text="for instructions to reset password."
        android:gravity="bottom"
        android:textAlignment="center"
        android:layout_marginTop="-15dp"
        tools:ignore="RtlCompat">
    </TextView>

    <!--Resend email button-->
    <Button
        android:id="@+id/resendButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Resend Email"
        android:backgroundTint ="#FFA500">
    </Button>


</androidx.appcompat.widget.LinearLayoutCompat>